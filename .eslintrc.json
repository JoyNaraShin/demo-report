{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": ["plugin:react/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": ["react", "@typescript-eslint", "prettier"],
    "rules": {
      "no-console": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": false,
          "semi": true,
          "useTabs": false,
          "tabWidth": 2,
          "trailingComma": "all",
          "printWidth": 80,
          "bracketSpacing": true,
          "arrowParens": "always"
        }
      ]
    }
  }